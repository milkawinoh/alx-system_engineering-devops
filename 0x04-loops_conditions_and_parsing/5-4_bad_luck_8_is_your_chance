!/usr/bin/env bash
#a Bash script that displays Best School 10 times.using while loop 
counter="1"
display="Best School"
while [ $counter -le 10 ]
    do
        if [[ $counter -eq 4 ]]
        then
            echo "bad luck"

        elif [[ $counter -eq 8 ]]
        then
            echo "good luck"
            
        else
        echo $display
        fi

        ((counter++))
        
    done